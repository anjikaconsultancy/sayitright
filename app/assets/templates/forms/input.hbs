{{#is hash.type '!=' 'checkbox'}}
  <div class="form-group">
    <label for="{{view_id}}_{{hash.id}}">{{hash.title}}</label>
    <input type="{{hash.type}}" class="form-control" id="{{view_id}}_{{hash.id}}" name="{{hash.name}}" placeholder="{{hash.placeholder}}" value="{{hash.value}}">
  </div>
{{/is}}
{{#is hash.type '==' 'checkbox'}}
  <div class="checkbox">
    <label>
      <input type="checkbox" id="{{view_id}}_{{hash.id}}" name="{{hash.name}}" value="{{hash.value}}" {{#is hash.value '==' hash.checked}}checked="checked"{{/is}}> {{hash.title}}
    </label>
  </div>    
{{/is}}

