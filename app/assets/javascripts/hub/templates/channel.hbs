
  <form class="page-content channel-form">
    <div class="navbar navbar-static-top navbar-default">
      <div class="navbar-content">
        <button class="close-button btn btn-default navbar-btn pull-left"><span class="glyphicon glyphicon-chevron-left"></span></button>
        <button type="submit" class="save-button btn btn-default navbar-btn pull-right" data-loading-text="Saving...">Save</button>        
        <h1 class="unselectable">Channel</h1>
      </div>
    </div><!--/navbar-->
  
  
    <div class="page-content-body scrollbars">
      <div class="grid">
        
        <h4>Channel Details</h4>
        <div class="row">
          <div class="col-sm-4"><p>Choose a name and title</p></div>
          <div class="col-sm-8">
            {{#if channel.preview_url}}
              <img id="{{view_id}}_channelPreviewImg" src="{{channel.preview_url}}/resize/fill/width/640/height/360/format.jpg" >
            {{else}}
              <img id="{{view_id}}_channelPreviewImg">
            {{/if}}
            
            <div class="form-group">
              <label for="{{view_id}}_channelPreviewSource">Preview</label>
              <input readonly="readonly" type="text" class="form-control" id="{{view_id}}_channelPreviewSource" name="preview_source" placeholder="Preview to Import" value="{{channel.preview_source}}">
              <button class="btn btn-primary choose-preview-button">Choose Image</button> <button class="btn btn-primary remove-preview-button">Remove Image</button>
            </div>


            <div class="form-group">
              <label for="{{view_id}}_channelTitle">Title</label>
              <input type="text" class="form-control" id="{{view_id}}_channelTitle" name="title" placeholder="Choose a title" value="{{channel.title}}">
            </div>

            <div class="form-group">
              <label for="{{view_id}}_channelName">Path</label>
              <input type="text" class="form-control" id="{{view_id}}_channelName" name="name" placeholder="Enter a unique path" value="{{channel.name}}">
            </div>

            <div class="form-group">
              <label for="{{view_id}}_channelSummary">Summary</label>
              <textarea class="form-control scrollbars" id="{{view_id}}_channelSummary" name="summary" placeholder="Enter a short summary" rows="3">{{channel.summary}}</textarea>
            </div>

            <div class="form-group">
              <label for="{{view_id}}_channelContent">Content</label>
              <div class="form-control form-editor scrollbars" id="{{view_id}}_channelContent" name="content">{{{channel.content}}}</div>
            </div>


            <!--
            <div class="form-group">
              <label for="{{view_id}}_channelContent">Content</label>
              <textarea class="form-control" id="{{view_id}}_channelContent" name="content" placeholder="Enter the channel description" rows="7">{{{channel.content}}}</textarea>
            </div>
            -->
            <div class="form-group">
              <label for="{{view_id}}_channelTags">Tags</label>
              <input type="text" class="form-control" id="{{view_id}}_channelTags" name="tags" placeholder="Channel Tags" value="{{channel.tags}}">
            </div>            

            <div class="form-group">
              <label for="{{view_id}}_channelPublishAt">Publish Date</label>
              <input type="text" class="form-control" id="{{view_id}}_channelPublishAt" name="publish_at" placeholder="Publish Date" value="{{channel.publish_at}}">
            </div>

            <div class="form-group">
              <label for="{{view_id}}_channelStatus">Status</label>
              <select class="form-control" id="{{view_id}}_channelStatus" name="status">
                <option value="draft">Draft</option>
                <option value="hidden">Hidden</option>
                <option value="published">Published</option>
              </select>              
            </div> 

            <div class="form-group">
              <label for="{{view_id}}_channelTags">Featured</label>
              <input type="number" class="form-control" id="{{view_id}}_channelFeatured" name="featured" placeholder="Channel Feature" value="{{channel.featured}}">
            </div>          

            <div class="form-group">
              <label for="{{view_id}}_channelPublic">Public</label>
              <input type="checkbox" class="form-control" id="{{view_id}}_channelPublic" name="public" {{#if channel.public}}checked{{/if}}>
            </div>            

          </div>
        </div>
      </div>
    </div><!--/content-body-->
  </form><!--/content-->
