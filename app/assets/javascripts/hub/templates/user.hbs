
  <form class="page-content editor-form">
    <div class="navbar navbar-static-top navbar-default">
      <div class="navbar-content">
        <button type="button" class="close-button btn btn-default navbar-btn pull-left"><span class="glyphicon glyphicon-chevron-left"></span></button>
        <input type="submit" class="btn btn-default navbar-btn pull-right" value="Save" />          
        <h1 class="unselectable">User</h1>
      </div>
    </div><!--/navbar-->
  
  
    <div class="page-content-body scrollbars">
      <div class="grid">
        
        <h4>Your Details</h4>
        <div class="row">
          <div class="col-sm-4"><p>Change user details.</p></div>
          <div class="col-sm-8">

            {{$ "forms/input" title="Screen Name" type="text" id="{{view_id}}_userUsername" name="username" placeholder="Choose a Screen Name" value=user.username}}
            {{$ "forms/input" title="Full Name" type="text" id="{{view_id}}_userName" name="name" placeholder="Enter Your Name" value=user.name}}
            

            {{$ "forms/text_area" title="Bio" id="{{view_id}}_userBio" name="bio" placeholder="Enter a few details about yourself." value=user.bio}}


            {{$ "forms/input" title="Website" type="url" id="{{view_id}}_userWebsite" name="website" placeholder="http://" value=user.website}}


            {{$ "forms/checkbox" title="Accept Marketing" id="{{view_id}}_userAcceptMarketing" name="accept_marketing" checked=true value=user.accept_marketing}}
            {{$ "forms/checkbox" title="Accept Marketing From Network Partners" id="{{view_id}}_userAcceptMarketingFromPartners" name="accept_marketing_from_partners" checked=true value=user.accept_marketing_from_partners}}

            {{$ "forms/select" options=options.roles title="Role" id="{{view_id}}_userRole" name="role" value=user.role}}


          </div>
        </div>
      </div>
    </div><!--/content-body-->
  </form><!--/content-->